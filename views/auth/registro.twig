{% extends 'layout.twig' %}

{% block content %}
    <div class="container">

        <form class="form-signin" method="post">
            <h2 class="form-signin-heading">Registro</h2>
            <div class="form-group {% if errors['nombre'] %}has-error{% endif %}">
                <label for="nombre" class="sr-only">Nombre de Usuario</label>
                <input type="text" id="nombre" name="nombre" class="form-control" placeholder="Nick" autofocus>
            </div>
            {{ generateAlert(errors, 'nombre') }}

            <div class="form-group {% if errors['email'] %}has-error{% endif %}">
                <label for="email" class="sr-only">Email</label>
                <input type="text" id="email" name="email" class="form-control" placeholder="Email" autofocus>
            </div>
            {{ generateAlert(errors, 'email') }}

            <div class="form-group {% if errors['password1'] %}has-error{% endif %}">
                <label for="password1" class="sr-only">Password</label>
                <input type="password" id="password1" name="password1" class="form-control" placeholder="Password">
            </div>
            {{ generateAlert(errors, 'password1') }}

            <div class="form-group {% if errors['password2'] %}has-error{% endif %}">
                <label for="password2" class="sr-only">Password</label>
                <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirmar Password">
            </div>
            {{ generateAlert(errors, 'password2') }}

            <div class="checkbox">
                <label>
                    <input type="checkbox" value="recordar"> Recu√©rdame
                </label>
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Registrarse</button>
        </form>

    </div> <!-- /container -->
{% endblock %}