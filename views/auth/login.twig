{% extends 'layout.twig' %}

{% block content %}
    <div class="container">

        <form class="form-signin" method="POST" action="{{ 'login' | url }}">
            <h2 class="form-signin-heading">Login</h2>
            <div class="form-group {% if errors['email'] %}has-error{% endif %}">
                <label for="email" class="sr-only">Email: </label>
                <input type="text" id="email" name="email" class="form-control" placeholder="Email" autofocus>
            </div>
            {{ generateAlert(errors, 'email') }}
            <div class="form-group {% if errors['password'] %}has-error{% endif %}">
                <label for="password" class="sr-only">Contraseña: </label>
                <input type="password" id="password" class="form-control" name="password" placeholder="Password">
            </div>
            {{ generateAlert(errors, 'password') }}
            {{ generateAlert(errors, 'authError') }}
            <div class="checkbox">
                <label>
                    <input type="checkbox" value="remember-me"> Recuérdame
                </label>
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Acceder</button>
        </form>

    </div> <!-- /container -->
{% endblock %}