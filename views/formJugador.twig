{% extends 'layout.twig' %}

{% block js %}
{% endblock %}



{% block nav %}
    <span class="navbar-brand"> | </span>
    <form action="../jugadores/new" method="POST" id="newJugador" class="navbar-brand">
        <input type="hidden" name="nombreEquipo" value="{{ equipo.nombre }}">
        <input type="hidden" name="_method" value="GET">
        <button type="submit" class="btn-link btn-alert" ><span>AÃ±adir Jugador</span></button>
    </form>
{% endblock %}



{% block content %}
    <h1>{{ webInfo.h1 }}</h1>
    <form action="" method="post">
        <div class="form-group {%  if errors['imagen'] %}has-error{% endif %}">
        <label for="imagen">Foto</label>
        <input type="text" class="form-control" id="imagen" name="imagen" placeholder="Foto Jugador"
               value="{{ jugador.imagen }}">
        </div>
        {{ generateAlert(errors, 'imagen') }}

        <div class="form-group {%  if errors['nombre'] %}has-error{% endif %}">
        <label for="name">Nombre</label>
        <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Nombre Jugador"
               value="{{ jugador.nombre }}">
        </div>
        {{ generateAlert(errors, 'nombre') }}

        <div class="form-group {%  if errors['apellido'] %}has-error{% endif %}">
        <label for="apellido">Apellidos</label>
        <input type="text" class="form-control" id="apellido" name="apellido" placeholder="Apellidos Jugador"
               value="{{ jugador.apellido }}">
        </div>
        {{ generateAlert(errors, 'apellido') }}

        <div class="form-group {%  if errors['edad'] %}has-error{% endif %}">
        <label for="edad">Edad</label>
        <input type="text" class="form-control" id="edad" name="edad" placeholder="Edad Jugador"
               value="{{ jugador.edad }}">
        </div>
        {{ generateAlert(errors, 'edad') }}

        <div class="form-group {%  if errors['altura'] %}has-error{% endif %}">
        <label for="altura">Altura</label>
        <input type="text" class="form-control" id="altura" name="altura" placeholder="Altura Jugador"
               value="{{ jugador.altura }}">
        </div>
        {{ generateAlert(errors, 'altura') }}

        <div class="form-group {%  if errors['peso'] %}has-error{% endif %}">
        <label for="peso">Peso</label>
        <input type="text" class="form-control" id="peso" name="peso" placeholder="Peso Jugador"
               value="{{ jugador.peso }}">
        </div>
        {{ generateAlert(errors, 'peso') }}

        <div class="form-group {%  if errors['posicion'] %}has-error{% endif %}">
        <label for="posicion">Posicion</label>
            {{ generateSelect(posicionValues, jugador['posicion'], 'posicion', false) }}
        </div>
        {{ generateAlert(errors, 'posicion') }}

        <div class="form-group {%  if errors['partidos'] %}has-error{% endif %}">
        <label for="partidos">Partidos jugados</label>
        <input type="text" class="form-control" id="partidos" name="partidos" placeholder="Partidos jugados Jugador"
               value="{{ jugador.partidos }}">
        </div>
        {{ generateAlert(errors, 'partidos') }}

        <div class="form-group {%  if errors['ensayos'] %}has-error{% endif %}">
        <label for="ensayos">Ensayos conseguidos</label>
        <input type="text" class="form-control" id="ensayos" name="ensayos" placeholder="Ensayos conseguidos Jugador"
               value="{{ jugador.ensayos }}">
        </div>
        {{ generateAlert(errors, 'ensayos') }}

        <div class="form-group {%  if errors['amarillas'] %}has-error{% endif %}">
        <label for="amarillas">Amarillas tenidas</label>
        <input type="text" class="form-control" id="amarillas" name="amarillas" placeholder="Amarillas tenidas Jugador"
               value="{{ jugador.amarillas }}">
        </div>
        {{ generateAlert(errors, 'amarillas') }}

        <div class="form-group {%  if errors['rojas'] %}has-error{% endif %}">
        <label for="rojas">Rojas tenidas</label>
        <input type="text" class="form-control" id="rojas" name="rojas" placeholder="Rojas tenidas Jugador"
               value="{{ jugador.rojas }}">
        </div>
        {{ generateAlert(errors, 'rojas') }}

        <input type="hidden" name="nombreEquipo" value="{{ nombreEquipo }}">
        <input type="hidden" name="_method" value="{{ webInfo.method }}">
        <button type="submit" class="btn btn-default">Enviar</button>
    </form>
{% endblock %}