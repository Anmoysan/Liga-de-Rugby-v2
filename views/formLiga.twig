{% extends 'layout.twig' %}

{% block js %}
{% endblock %}



{% block nav %}
    <span class="navbar-brand"> | </span><a class="navbar-brand" href="{{ 'ligas/new' | url }}">AÃ±adir Liga</a>
{% endblock %}



{% block content %}
    <h1>{{ webInfo.h1 }}</h1>
    <form action="" method="post">
        <div class="form-group {%  if errors['nombre'] %}has-error{% endif %}">
            <label for="nombre">Nombre</label>
            <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Nombre Liga" value="{{ liga.nombre }}">
        </div>
        {{ generateAlert(errors, 'nombre') }}

        <div class="form-group {%  if errors['imagen'] %}has-error{% endif %}">
            <label for="imagen">Imagen</label>
            <input type="text" class="form-control" id="imagen" name="imagen" placeholder="Imagen Liga" value="{{ liga.imagen }}">
        </div>
        {{ generateAlert(errors, 'imagen') }}

        <div class="form-group {%  if errors['max_equipos'] %}has-error{% endif %}">
            <label for="max_equipos">Equipos Maximos</label>
            <input type="text" class="form-control" id="max_equipos" name="max_equipos" placeholder="Equipos Maximos de la Liga" value="{{ liga.max_equipos }}">
        </div>
        {{ generateAlert(errors, 'max_equipos') }}

        <div class="form-group {%  if errors['inicio_liga'] %}has-error{% endif %}">
            <label for="inicio_liga">Inicio Liga</label>
            <input type="date" class="form-control" id="inicio_liga" name="inicio_liga" placeholder="Principio de la Liga" value="{{ liga.inicio_liga }}">
        </div>
        {{ generateAlert(errors, 'inicio_liga') }}

        <div class="form-group {%  if errors['fin_liga'] %}has-error{% endif %}">
            <label for="fin_liga">Fin Liga</label>
            <input type="date" class="form-control" id="fin_liga" name="fin_liga" placeholder="Final de la Liga" value="{{ liga.fin_liga }}">
        </div>
        {{ generateAlert(errors, 'fin_liga') }}

        <input type="hidden" name="_method" value="{{ webInfo.method }}">
        <button type="submit" class="btn btn-default">Enviar</button>
    </form>
{% endblock %}